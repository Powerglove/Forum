<p>
  <strong>Titel:</strong>
  <%= @topics.title %>
</p>
 
 <h2>Comments</h2>
<% @topics.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
 
 <h2>Add a comment:</h2>
<%= form_for([@topics, @topics.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 

<%= link_to 'Edit', edit_topic_path(@topics) %> |
<%= link_to 'Back', topics_path %>



 

