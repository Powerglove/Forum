<h1>Welcome to the Forum</h1>

<%= link_to "new topic", new_topic_path %>
<br>
<br>
<h1>Listing topics</h1>
<% @topics.each do |c| %>
<%= link_to c.title, {:action => 'show', :id => c.id} %>
<% end %>


 <table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.title %></td>
      <td><%= link_to 'Show', topics_path(topic) %></td>
      <td><%= link_to 'Edit', edit_topics_path(topic) %></td>

    </tr>
  <% end %>
</table>
